@model IEnumerable<Kyrsovik.Models.Catygories>

@{
    ViewBag.Title = "Index";
}

<h2>Список категорий</h2>

<h3>
    Добавить<i><u> @Html.ActionLink(" новую категорию ", "Create")</u></i>
</h3>
<table class="table">
    <tr>
        <th>
            <p>Категория</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name_category)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_category }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_category }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_category })
        </td>
    </tr>
}

</table>
