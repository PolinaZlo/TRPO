@model IEnumerable<Kyrsovik.Models.Position>

@{
    ViewBag.Title = "Index";
}

<h2>Список должностей</h2>
<h3>
    Добавить<i><u> @Html.ActionLink(" новую должность ", "Create")</u></i>
</h3>
<table class="table">
    <tr>
        <th>
            <p>Должность</p>
        </th>
        <th>
            <p>Зарплата</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name_position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_position }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_position }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_position })
        </td>
    </tr>
}

</table>
